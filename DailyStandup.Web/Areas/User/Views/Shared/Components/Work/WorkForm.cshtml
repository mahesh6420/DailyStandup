@model WorkViewModel

<form asp-action="Create" id="validationform" data-parsley-validate="" novalidate="">
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="Description" class="col-12 col-sm-3 col-form-label text-sm-right"></label>
        <div class="col-12">
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
    </div>
        <div class=" form-group">
            <select asp-for="ProjectId" asp-items="@{new SelectList(Model.Projects, "Id", "Name")}" class="form-control">
                <option>Select Project</option>
            </select>
        </div>

    <div class="form-group row text-right">
        <div class="col col-sm-12 col-lg-12">
            <button type="submit" class="btn btn-space btn-primary">Submit</button>
            <button class="btn btn-space btn-secondary" type="button" onclick="history.go(-1)">Cancel</button>
        </div>
    </div>
</form>