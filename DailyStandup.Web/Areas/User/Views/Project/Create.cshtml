@model ProjectViewModel

@{ 
    ViewData["Title"] = "New Project";
}

<div class="row">
    <!-- ============================================================== -->
    <!-- valifation types -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Add New Project</h5>
            <div class="card-body">
                <form asp-action="Create" id="validationform" data-parsley-validate="" novalidate="">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-12 col-sm-3 col-form-label text-sm-right"></label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <input asp-for="Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ShortDescription" class="col-12 col-sm-3 col-form-label text-sm-right"></label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <textarea asp-for="ShortDescription" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LongDescription" class="col-12 col-sm-3 col-form-label text-sm-right"></label>
                        <div class="col-12 col-sm-8 col-lg-6">
                            <textarea asp-for="LongDescription" class="form-control"></textarea>
                        </div>
                    </div>
                    
                    <div class="form-group row text-right">
                        <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                            <button type="submit" class="btn btn-space btn-primary">Submit</button>
                            <button class="btn btn-space btn-secondary">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end valifation types -->
    <!-- ============================================================== -->
</div>