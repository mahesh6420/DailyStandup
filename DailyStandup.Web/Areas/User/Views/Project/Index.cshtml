@model IEnumerable<Project>

@{
    ViewData["Title"] = "Project List";
}


<a asp-action="Create" class="btn btn-primary">Add New Project</a>
<br />
<br />
<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (var project in Model)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                <div class="card">
                    <div class="card-header d-flex">
                        <h4 class="mb-0">@project.Name</h4>
                        <div class="dropdown ml-auto">
                            <a class="toolbar" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="mdi mdi-dots-vertical"></i>  </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#">Archieve</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @if (project.ShortDescription.Length > 43)
                            {
                                @string.Join("...", project.ShortDescription.Remove(43), "")
                            }
                            else
                            {
                                @project.ShortDescription
                            }
                        </p>
                        <a href="#" class="btn btn-primary">Project Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
            No projects yet.
        </div>
    }
</div>
